generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Usuario {
  id        Int         @id @default(autoincrement())
  nome      String
  email     String      @unique
  senha     String
  slug      String?     @unique
  agenda    Agenda[]
  clientes  Clientes[]
  historico Historico[]
  relatorios Relatorio[]
  planos     Planos[]
  notificacoes Notificacao[]

  @@map("usuario")
}

model Planos {
  id        Int      @id @default(autoincrement())
  nome      String   @map("NOME") @db.VarChar(100)
  valor     Float    @map("VALOR")
  descricao String?  @map("DESCRICAO")
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("planos")
}

model Clientes {
  numeroTelefone      String?   @map("NUMERO DE TELEFONE") @db.VarChar(20)
  nome                String?   @map("NOME") @db.VarChar(150)
  endereco            String?   @map("ENDEREÃ‡O") @db.VarChar(200)
  plano               String?   @map("PLANO") @db.VarChar(100)
  status              String?   @map("STATUS") @db.VarChar(50)
  cpf                 String?   @map("CPF") @db.VarChar(14)
  vencimento          String?   @map("VENCIMENTO") @db.VarChar(10)
  id                  Int       @id @default(autoincrement())
  dataUltimoPagamento DateTime? @map("DATA_ULTIMO_PAGAMENTO")
  createdAt           DateTime  @default(now()) @map("CRIADO_EM")
  usuarioId           Int       @default(1)
  usuario             Usuario   @relation(fields: [usuarioId], references: [id])
  relatorios          Relatorio[]

  @@map("clientes")
}

model Relatorio {
  id          Int      @id @default(autoincrement())
  tipoEvento  String   @map("TIPO_EVENTO") @db.VarChar(50) // 'PAGAMENTO', 'ATRASO', 'VENCIMENTO_PROXIMO'
  descricao   String?  @map("DESCRICAO")
  valor       Float?   @map("VALOR")
  dataEvento  DateTime @default(now()) @map("DATA_EVENTO")
  
  clienteId   Int
  usuarioId   Int
  
  cliente     Clientes @relation(fields: [clienteId], references: [id])
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("relatorio")
}

model Historico {
  id             Int     @id @default(autoincrement())
  numeroTelefone String? @map("NUMERO") @db.VarChar(20)
  nome           String? @map("NOME") @db.VarChar(150)
  mensagem       String? @map("MENSAGEM")
  usuarioId      Int     @default(1)
  usuario        Usuario @relation(fields: [usuarioId], references: [id])

  @@map("historico")
}

model Agenda {
  id        Int       @id @default(autoincrement())
  nome      String?   @db.VarChar(150)
  telefone  String?   @db.VarChar(20)
  endereco  String?   @db.VarChar(200)
  tipo      String?   @db.VarChar(50)
  data      DateTime?
  descricao String?
  status    String?   @default("Pendente") @db.VarChar(20)
  createdAt DateTime  @default(now())
  usuarioId Int       @default(1)
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])

  @@map("agenda")
}

model dados {
  id         Int    @id @default(autoincrement())
  session_id String @db.VarChar(255)
  message    Json
}

model mensalix {
  id         Int    @id @default(autoincrement())
  session_id String @db.VarChar(255)
  message    Json
}
